<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Entity\Like" table="likes">
        <id name="id" type="string" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="postId" type="string" column="post_id" length="36" nullable="false"/>
        <field name="userId" type="string" column="user_id" length="36" nullable="false"/>
        <field name="createdAt" type="datetime_immutable" column="created_at" nullable="false"/>

        <many-to-one field="post" target-entity="App\Domain\Entity\Post" inversed-by="likes">
            <join-column name="post_id" referenced-column-name="id"/>
        </many-to-one>

        <unique-constraints>
            <unique-constraint columns="post_id,user_id" name="unique_user_post_like"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>